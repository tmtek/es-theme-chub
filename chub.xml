<theme>

	<formatVersion>4</formatVersion>

	<view name="system, basic, detailed">

		<image name="background_color" extra="true">
			<path>./_inc/images/bg_color.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>0 0</size>
			<color>000000</color>
		</image>

		<helpsystem name="help">
			<pos>0 .95</pos>
			<textColor>333333</textColor>
			<iconColor>333333</iconColor>
			<fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
			<fontSize>0.03</fontSize>
		</helpsystem>

	</view>


<feature supported="carousel">
   <view name="system">
   	
   	<image name="chubby_bunny" extra="true">
		<path>./_inc/images/bg_image_bunny.png</path>
		<origin>0 0</origin>
		<pos>.42 .2</pos>
		<size>0 0</size>
		<color>ffffff</color>
		<tile>false</tile>
	</image>

	<helpsystem name="help">
		<pos>0.23 0.95</pos>
		<textColor>333333</textColor>
		<iconColor>333333</iconColor>
		<fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
		<fontSize>0.03</fontSize>
	</helpsystem>

	<carousel name="systemcarousel">
		<type>horizontal</type>
		<origin>0 0</origin>
		<pos>0 .6</pos>
		<size>1 0.2</size>
		<logoScale>5.5</logoScale>
		<logoSize>0.2 0.025</logoSize>
		<color>00000000</color>
		<logoRotation>15</logoRotation>
		<maxLogoCount>3</maxLogoCount>
	</carousel>

	<text name="systemInfo">
		<pos>0 .51</pos>
		<backgroundColor>00000000</backgroundColor>
		<color>333333</color>
		<fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
		<fontSize>0.02</fontSize>
	</text>

   </view>
</feature>



