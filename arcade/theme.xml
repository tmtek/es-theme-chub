<theme>  
  <formatVersion>4</formatVersion>
  
  <!-- 
  	Emulation system updates the UI for each individual system selected.
  	Each system has to have it's own layout file.
  	We include the universal one for each system, then make the appropriate overrides.
  -->
  <include>./../chub.xml</include>
  
  <!--
	UNIVERSAL OVERRIDES
  -->
  <view name="system, grid, basic, detailed, video">
	  	<!--
		We specify the system specific log to use.
		This is used in the system carousel, and in the various detail views.
	 	-->
    <image name="logo">
      <path>./system.svg</path>
    </image>
  </view>
 
</theme>